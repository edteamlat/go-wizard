# Use for the name of the structs of the different layers
model: UserRole

# Will be use for the table name and constraints
# also, it'll be converted to camel case to be use
# for the Slice model
table: user_roles
# a list of fields with the format:
# field_name:go-type:not null
fields:
  - "user_id:uint"
  - "role_id:int"
  - "is_active:true"
  - "description:string:not null"
  - "created_at:time" # if we don't specify the third value, by default will be NULL

# The available layers that we can generate
# if you don't want to use one, just remove it
layers:
  - domain
  - handler:echo # we only support the echo framework for now
  - postres # we don't support other db system for now
  - model
  - database:postgres # here we'll save the sql files to modify our db, it only supports postgres syntax for now
